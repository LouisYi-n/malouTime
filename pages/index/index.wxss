/**index.wxss**/
page {
  min-height: 100vh;
  padding: 0;
  margin: 0;
  background: #f5f5f5;
}

/* 设置所有元素使用 border-box */
page, view, text, button {
  box-sizing: border-box;
}

.container {
  margin: 0;
  width: 100%;
  min-height: 100vh;
  transition: background-color 0.3s ease;
  gap: 8rpx;
  padding: 4rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.current-time {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 24rpx;
}

/* 下班倒计时卡片 */
.countdown-card {
  width: 100%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.countdown-title {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.countdown-time {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.time-block {
  background: #FFB74D;
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: bold;
  padding: 12rpx;
  border-radius: 8rpx;
  min-width: 80rpx;
  text-align: center;
}

.time-label {
  color: #333;
  font-size: 28rpx;
  margin: 0 8rpx;
}

.work-info {
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.work-time {
  margin-bottom: 8rpx;
}

/* 今日收入卡片 */
.income-card {
  width: 100%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.income-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.income-amount {
  font-size: 44rpx;
  color: #FF6B6B;
  font-weight: bold;
}

/* 收入信息网格 */
.income-grid {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.income-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.income-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.income-value {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.income-grid .income-item:nth-child(1),
.income-grid .income-item:nth-child(2) {
  grid-row: 1;
}

.income-grid .income-item:nth-child(3),
.income-grid .income-item:nth-child(4) {
  grid-row: 2;
}

/* 信息卡片 */
.info-card {
  width: 100%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.info-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 摸鱼按钮 */
.slacking-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  border-radius: 44rpx;
  color: #FFFFFF;
  margin-top: 24rpx;
  border: none;
  transition: background-color 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.slacking-btn.disabled {
  background: #ccc !important;
  color: #fff;
  box-shadow: none;
}

.slacking-btn::after {
  border: none;
}

/* 首次使用弹窗 */
.setup-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  width: 480rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.modal-text {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.modal-buttons {
  display: flex;
  gap: 24rpx;
  width: 100%;
  padding: 0 24rpx;
}

.modal-btn {
  flex: 1 !important;
  width: auto !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin: 0 !important;
  background: #FFB74D;
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
}

.modal-btn-cancel {
  background: #f5f5f5;
  color: #666;
  box-shadow: none;
}
