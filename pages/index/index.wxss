/**index.wxss**/
/* 页面基础样式 */
page {
  min-height: 100vh;
  padding: 0;
  margin: 0;
  background: #f5f5f5;
}

/* 设置所有元素使用 border-box 盒模型 */
page, view, text, button {
  box-sizing: border-box;
}

/* 主容器样式 */
.container {
  margin: 0;
  width: 100%;
  min-height: 100vh;
  transition: background-color 0.3s ease;
  padding: 8rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 头部样式 */
.header {
  padding: 20rpx;
  text-align: center;
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.header .current-time {
  font-size: 28rpx;
  color: #666;
}

/* 当前时间显示样式 */
.current-time {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 24rpx;
}

/* 下班倒计时卡片样式 */
.countdown-card {
  width: 100%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.countdown-title {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.countdown-time {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.time-block {
  background: #FFB74D;
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: bold;
  padding: 12rpx;
  border-radius: 8rpx;
  min-width: 80rpx;
  text-align: center;
}

.time-label {
  color: #333;
  font-size: 28rpx;
  margin: 0 8rpx;
}

.work-info {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  padding-bottom: 50rpx;
}

.work-time {
  margin-bottom: 8rpx;
}

/* 今日收入卡片样式 */
.income-card {
  width: 100%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.income-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.income-amount {
  font-size: 44rpx;
  color: #FF6B6B;
  font-weight: bold;
}

/* 收入信息网格样式 */
.income-grid {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx;
  margin-bottom: 60rpx;
  justify-content: space-between;
}

.income-item {
  width: calc(50% - 12rpx);
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

.income-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.income-value {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.info-card-moyu {
  width: 100%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 信息卡片通用样式 */
.info-card {
  width: 100%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.info-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 摸鱼按钮样式 */
.slacking-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  border-radius: 44rpx;
  color: #FFFFFF;
  margin-top: 24rpx;
  border: none;
  transition: background-color 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.slacking-btn.disabled {
  background: #ccc !important;
  color: #fff;
  box-shadow: none;
}

.slacking-btn::after {
  border: none !important;
}

/* 首次使用弹窗样式 */
.setup-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  margin-bottom: 24rpx;
}

.modal-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 48rpx;
  line-height: 1.5;
  padding: 0 20rpx;
}

.modal-buttons {
  display: flex;
  gap: 24rpx;
  width: 100%;
  padding: 0 20rpx;
}

.modal-btn {
  flex: 1 !important;
  min-width: 0 !important;
  width: auto !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin: 0 !important;
  padding: 0 20rpx !important;
  white-space: nowrap !important;
  overflow: hidden !important;
  text-overflow: ellipsis !important;
  background: #FFB74D;
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.modal-btn-cancel {
  background: #f5f5f5;
  color: #666;
  box-shadow: none;
}
