page {
  min-height: 100vh;
  padding: 0;
  margin: 0;
  background: #f5f5f5;
}

.container {
  padding: 0;
  margin: 0;
  width: 100%;
  min-height: 100vh;
  transition: background-color 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.share-card {
  width: 90%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 24rpx;
  position: relative;
}

.share-title::after {
  content: '';
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #FFB74D;
  border-radius: 2rpx;
}

.share-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 48rpx;
  line-height: 1.6;
  padding: 0 20rpx;
}

.share-btn {
  display: flex !important;
  align-items: center;
  justify-content: center;
  margin: 16rpx 0 !important;
  width: 100% !important;
  height: 80rpx !important;
  border-radius: 40rpx !important;
  background: #FFB74D !important;
  color: #fff !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
  border: none !important;
  transition: all 0.3s ease !important;
  box-shadow: 0 4rpx 12rpx rgba(255, 183, 77, 0.3) !important;
}

.share-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.share-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 朋友圈分享按钮特殊样式 */
.share-btn[open-type="shareTimeline"] {
  background: #07C160 !important;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3) !important;
} 