.bg-container {
  min-height: auto;
  background: #f5f5f5;
  box-sizing: border-box;
  padding: 0;
}

.bg-section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 0;
  text-align: center;
  margin-bottom: 20rpx;
}

.bg-color-grid {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
  gap: 20rpx;
}

.bg-color-item {
  width: calc((100% - 20rpx) / 2);
  height: 120rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.bg-color-item:active {
  transform: scale(0.95);
}

.bg-color-item text {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

