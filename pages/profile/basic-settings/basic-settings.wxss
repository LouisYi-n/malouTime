/* 页面容器 */
page {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
  position: relative;
}

.scroll-container {
  position: absolute;
  top: 168rpx; /* 导航栏高度 */
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f5f5f5;
}

.container {
  width: 100%;
  padding: 24rpx 0;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 设置卡片 */
.setting-card {
  background: #ffffff;
  padding: 32rpx;
  margin: 0 24rpx 24rpx 24rpx;
  box-sizing: border-box;
  width: calc(100% - 48rpx); /* 考虑左右边距 */
  border-radius: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.setting-item:last-child {
  border-bottom: none;
}

.sub-item {
  padding-left: 40rpx;
}

.setting-label {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.setting-input {
  text-align: right;
  font-size: 28rpx;
  color: #333333;
  min-width: 200rpx;
}

/* Picker样式 */
.picker-text {
  font-size: 28rpx;
  color: #333333;
  min-width: 200rpx;
  text-align: right;
}

/* 工作日网格 */
.weekday-grid {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.weekday-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666666;
  background: #f5f5f5;
}

.weekday-item.active {
  background: #007AFF;
  color: #ffffff;
}

/* Switch样式 */
switch {
  transform: scale(0.9);
} 