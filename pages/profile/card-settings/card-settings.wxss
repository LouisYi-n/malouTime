/* 页面容器 */
page {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
  position: relative;
}

.scroll-container {
  position: absolute;
  top: 168rpx; /* 导航栏高度 */
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f5f5f5;
}

.container {
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 设置卡片 */
.setting-card {
  background: #ffffff;
  padding: 24rpx 32rpx;
  margin: 0 24rpx 24rpx 24rpx;
  box-sizing: border-box;
  width: calc(100% - 48rpx); /* 考虑左右边距 */
  border-radius: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 卡片列表 */
.card-list {
  background: #ffffff;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 卡片项目 */
.card-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.card-item:last-child {
  border-bottom: none;
}

.card-info {
  flex: 1;
  margin-right: 32rpx;
}

.card-title {
  font-size: 26rpx;
  color: #999999;
  line-height: 1.4;
}

/* Switch样式 */
switch {
  transform: scale(0.9);
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
} 