/* 页面容器 */
page {
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

/* 菜单卡片 */
.menu-card {
  background: #ffffff;
  width: 100%;
  box-sizing: border-box;
}

/* 菜单项 */
.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 32rpx;
  position: relative;
  background: #ffffff;
  width: 100%;
  box-sizing: border-box;
}

.menu-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 32rpx;
  right: 0;
  bottom: 0;
  height: 1rpx;
  background-color: rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

/* 菜单图标 */
.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon image {
  width: 36rpx;
  height: 36rpx;
}

/* 图标颜色 */
.icon-blue {
  filter: invert(45%) sepia(90%) saturate(1000%) hue-rotate(190deg) brightness(100%);
}

.icon-orange {
  filter: invert(70%) sepia(50%) saturate(1000%) hue-rotate(350deg) brightness(100%);
}

.icon-purple {
  filter: invert(40%) sepia(90%) saturate(1000%) hue-rotate(240deg) brightness(100%);
}

.icon-green {
  filter: invert(60%) sepia(90%) saturate(1000%) hue-rotate(100deg) brightness(100%);
}

.icon-red {
  filter: invert(40%) sepia(90%) saturate(1000%) hue-rotate(340deg) brightness(100%);
}

.icon-blue-light {
  filter: invert(65%) sepia(90%) saturate(1000%) hue-rotate(180deg) brightness(100%);
}

/* 菜单文本 */
.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  font-weight: 400;
}

/* 箭头 */
.menu-arrow {
  color: #CCCCCC;
  font-size: 28rpx;
  margin-left: 16rpx;
}

/* Modal 样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 600rpx;
  box-sizing: border-box;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-text {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.modal-buttons button {
  flex: 1;
  margin: 0 15rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.modal-buttons button:first-child {
  background: #f5f5f5;
  color: #666666;
}

.modal-buttons button:last-child {
  background: #007AFF;
  color: #ffffff;
} 